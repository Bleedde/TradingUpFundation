CREATE DATABASE trading_up;
USE trading_up;
CREATE TABLE profesores(
	id INT auto_increment PRIMARY KEY,
    correo VARCHAR(255),
    contrasenia VARCHAR(255)
    );
CREATE TABLE curso_1(
	nivel INT PRIMARY KEY,
    descripcion VARCHAR(255)
    );
CREATE TABLE curso_2(
	nivel INT PRIMARY KEY,
    descripcion VARCHAR(255)
    );
CREATE TABLE curso_3(
	nivel INT PRIMARY KEY,
    descripcion VARCHAR(255)
    );
CREATE TABLE curso_4(
	nivel INT PRIMARY KEY,
    descripcion VARCHAR(255)
    );
CREATE TABLE usuarios(
	id INT AUTO_INCREMENT PRIMARY KEY,
    nombre VARCHAR(255),
    correo VARCHAR(255),
    contrasenia VARCHAR(255),
    estado_curso_1 VARCHAR(255),
    estado_curso_2 VARCHAR(255),
    estado_curso_3 VARCHAR(255),
    estado_curso_4 VARCHAR(255)
    );